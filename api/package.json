{
  "name": "api",
  "type": "module",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "scripts": {
    "update": "npm install -f aeria@latest aeria-sdk@latest",
    "build": "aeria -c",
    "build:icons": "aeria -i",
    "build:post": "aeria -mik",
    "dev": "aeria -w",
    "start": "node --import aeria/loader ./dist/index.js"
  },
  "aeriaSdk": {
    "publicUrl": {
      "development": "http://localhost:3000/api",
      "production": "https://yourdomainhere.local/api"
    },
    "storage": {
      "strategy": "localStorage",
      "namespace": "aeria"
    },
    "mirrorPaths": [
      ".aeria",
      "../web/.aeria-ui"
    ]
  },
  "dependencies": {
    "aeria": "^0.0.347",
    "aeria-sdk": "^0.0.219"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "typescript": "^5.9.3"
  }
}
